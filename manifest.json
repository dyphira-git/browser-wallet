{
  "manifest_version": 3,
  "name": "Dyphira Wallet",
  "version": "1.0",
  "description": "A wallet extension for the Dyphira blockchain",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "html/approval.html",
        "js/inject.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 